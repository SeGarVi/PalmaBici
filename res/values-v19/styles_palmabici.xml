        <item name="android:fitsSystemWindows">true</item> -->
        
        <item name="actionBarItemBackground">@drawable/selectable_background_palmabici</item>
        <item name="popupMenuStyle">@style/palmabici_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/palmabici_DropDownListView</item>
        <item name="actionBarTabStyle">@style/palmabici_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/palmabici_DropDownNav</item>
        <item name="actionBarStyle">@style/palmabici_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_palmabici</item>
        <item name="android:popupMenuStyle">@style/palmabici_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/palmabici_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/palmabici_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/palmabici_DropDownNav</item>
        <item name="android:actionBarStyle">@style/palmabici_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_palmabici</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.palmabici.widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.palmabici.widget</item>

    </style>

    <style name="palmabici_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_palmabici</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_palmabici</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_palmabici</item>
        <item name="progressBarStyle">@style/palmabici_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_palmabici</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_palmabici</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_palmabici</item>
        <item name="android:progressBarStyle">@style/palmabici_ProgressBar</item>
    </style>

    <style name="palmabici_transparent_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_palmabici</item>
        <item name="progressBarStyle">@style/palmabici_ProgressBar</item>
        
        <item name="android:background">@drawable/ab_transparent_palmabici</item>
        <item name="android:progressBarStyle">@style/palmabici_ProgressBar</item>
    </style>
	
    <style name="palmabici_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_palmabici</item>	
    </style>
	
    <style name="palmabici_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_palmabici</item>
    </style>

    <style name="palmabici_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_palmabici</item>

        <item name="android:background">@drawable/tab_indicator_ab_palmabici</item>
    </style>
	
    <style name="palmabici_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_palmabici</item>

        <item name="android:background">@drawable/spinner_background_ab_palmabici</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_palmabici</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_palmabici</item>
    </style>
    
    <style name="palmabici_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_palmabici</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.palmabici.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/palmabici_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/palmabici_DropDownListView</item>
        
        <item name="android:popupMenuStyle">@style/palmabici_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/palmabici_DropDownListView</item>
    </style>

</resources>